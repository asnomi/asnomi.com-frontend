                  div.item
                    div.content
                      div.header 4. WONDERLAND
                  div.item
                    div.content
                      div.header 5. セルフィッシュガール
                  div.item
                    div.content
                      div.header 6. サイコメトリスト
                  div.item
                    div.content
                      div.header 7. 泡
                  div.item
                    div.content
                      div.header 8. あの日の星空  
        div.ui.divider
      div.column
      div.column
        div.ui.items
          div.item
            div.content
              div.header
                span Information
              div.description
                h5 価格
                p 800円(コミティア頒布時)
