//- functions
//- topnews and news
  - arg 0: TopComment
  - arg 1: Date
  - arg 2: image url
  - arg 3: image url over link(sample page)
  - arg 4: product link
  - arg 5: subComment
mixin topnews(items)
  li.list-group-item.list-group-item-action.flex-column.align-items-start.bg-transparent
    div.d-flex.justify-content-between
      h5.mt-10.mb-1.text-dark 
        div.badge.badge-primary
          span New
        | #{items[0]}
      small #{items[1]}
    a(href=items[2] target="_blank")
      img(src=items[3] alt="jacket" width="300px").img-fluid
    p.mt-1.mb-1
      small
        a(href=items[4]) #{items[5]}

mixin news(items)
  li.list-group-item.list-group-item-action.flex-column.align-items-start.bg-transparent
    div.d-flex.justify-content-between
      h5.mt-10.mb-1.text-dark #{items[0]}
      small #{items[1]}
    a(href=items[2] target="_blank")
      img(src=items[3] alt="jacket" width="300px").img-fluid
    p.mt-1.mb-1
      small
        a(href=items[4]) #{items[5]}

