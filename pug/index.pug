//-           a.ui.label 詳しく

mixin index_card(items)
  div.column
    div.segment
      img(src=items[4]).ui.bordered.fluid.image
  div.column
    div.ui.items
      div.item
        div.content
          div.header
            span #{items[1]}
          div.meta
            span #{items[0]}
          div.description
            span #{items[2]}
          div.extra
            ui.green.labels
              a(href=items[3]).ui.label 詳細
    div.ui.divider

