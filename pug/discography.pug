//- global var
include ./include/var.pug

//- local var
- var title = "asnomi studio/discography";
- var ogpurl = "https://s3-ap-northeast-1.amazonaws.com/asnomi.com/img/ogp.jpg";

// functions
//- disco_card 
  - arg 0: image rel
  - arg 1: product page url
  - arg 2: image url
  - arg 3: product name
  - arg 4: product tags
mixin disco_card(items)
  div.card
    a(rel=items[0] href=items[1] target="_blank").image
      img(src=items[2])
    div.content
      div.header #{items[3]}
      div.meta #{items[4]}
      div.description 
      div.extra.content 

